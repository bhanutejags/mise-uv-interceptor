#!/usr/bin/env bash
set -euo pipefail

# mise-uv-interceptor: Intercept pip commands to guide AI agents toward uv
# https://github.com/bhanutejags/mise-uv-interceptor

cat >&2 <<'EOF'
╭─────────────────────────────────────────────────────────────╮
│  ⚠️  pip invocation intercepted                              │
├─────────────────────────────────────────────────────────────┤
│  This project uses uv for dependency management.            │
│                                                             │
│  Instead of:  pip install <package>                         │
│  Use:         uv add <package>                              │
│                                                             │
│  Instead of:  pip install -r requirements.txt               │
│  Use:         uv sync                                       │
│                                                             │
│  Instead of:  pip uninstall <package>                       │
│  Use:         uv remove <package>                           │
│                                                             │
│  Instead of:  pip list                                      │
│  Use:         uv pip list                                   │
╰─────────────────────────────────────────────────────────────╯
EOF
exit 1
